<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN">

<head>
  {% block head %}
    {% load staticfiles %}
    <link rel="stylesheet" href="{{ STATIC_URL ~ 'css/style.css' }}" />
    <script type="text/javascript" src="{{ STATIC_URL ~ 'js/main.js' }}"></script>

    <title>
      {% block title %}
        Home
      {% endblock title %}
      - Oriental Fruit Fly Transcriptome Database
    </title>

  {% endblock head %}
</head>

<body>
  {% block body %}

  <div id="header">
    {% block header %}
    {% endblock header %}
  </div>

  <div id="menu">
    {% block menu %}
    {% endblock menu %}
  </div>

  <div id="logout">
    {% block logout %}
    {% endblock logout %}
  </div>

  <div id="search">
    {% block search %}
    {% endblock search %}
  </div>

  <div id="login">
    {% block login %}
    {% endblock login %}
  </div>

  <div id="content">
    {% block content %}
    {% endblock content %}
  </div>

  <div id="footer">
    {% block footer %}
    <p>Oriental Fruit Fly Transcriptome Database v1.2</p>
    {% endblock footer %}
  </div>

  {% endblock body %}
</body>
