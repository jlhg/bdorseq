{% if transcript_search_form %}
  <form action="/bdorseq/search/" method="get">
    <div class="field_wrapper search line">
      <label for="id_line">Line</label>
      <div class="clear" />
      {{ transcript_search_form.line_selector|safe }}
      <div class="clear" />
      {{ transcript_search_form.line|safe }}
    </div>

    <div class="clear" />

    <div class="field_wrapper search seqname">
      {# {{ transcript_search_form.seqname.errors|safe }} #}
      <label for="id_seqname">Transcript Name</label>
      {{ transcript_search_form.seqname|safe }}

      {# {{ transcript_search_form.refacc.errors|safe }} #}
      <label for="id_refacc">Dmel. Accession</label>
      {{ transcript_search_form.refacc|safe }}
    </div>

    <div class="field_wrapper">
      {# {{ transcript_search_form.refdes.errors|safe }} #}
      <label for="id_refdes">Dmel. Description</label>
      {{ transcript_search_form.refdes|safe }}
      (Support <a href="/bdorseq/help#boolean_fulltext_search" target="_blank">Boolean Full-Text Searches</a>)

    </div>

    <div class="field_wrapper">
      {# {{ transcript_search_form.seq.errors|safe }} #}
      <label for="id_seq">Transcript Sequence</label>
      {{ transcript_search_form.seq|safe }}
      <label for="id_seq">E-value</label>
      {{ transcript_search_form.evalue|safe }}
    </div>

    <div class="field_wrapper">
      {# {{ transcript_search_form.items_per_page.errors|safe }} #}
      <label for="id_items_per_page">Items per page</label>
      {{ transcript_search_form.items_per_page|safe }}
    </div>

    <div class="field_wrapper">
      <input type="submit", value="Search" />
    </div>
  </form>
{% endif %}
