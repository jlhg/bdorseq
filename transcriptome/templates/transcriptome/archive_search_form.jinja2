{% if archive_search_form %}
  <form action="/bdorseq/archive/" method="get">
    <div class="field_wrapper search line">
      <label for="id_line">Line</label>
      <div class="clear" />
      {{ archive_search_form.line_selector|safe }}
      <div class="clear" />
      {{ archive_search_form.line|safe }}
    </div>

    <div class="clear" />

    <div class="field_wrapper">
      <label for="id_refacc">Dmel. Accession</label>
      {{ archive_search_form.refacc|safe }}
    </div>

    <div class="field_wrapper">
      <input type="submit", name="search", value="Search" />
    </div>
  </form>
{% endif %}
