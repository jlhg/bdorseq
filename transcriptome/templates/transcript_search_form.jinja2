{% if transcript_search_form %}
  <form action="/bdorseq/search/" method="get">
    {# {{ transcript_search_form.non_field_errors }} #}

    <div class="field_wrapper">
      {{ transcript_search_form.line.errors }}
      <label for="id_line">Line</label>
      {{ transcript_search_form.line }}
    </div>

    <div class="field_wrapper">
      {{ transcript_search_form.seqname.errors }}
      <label for="id_seqname">Transcript Name</label>
      {{ transcript_search_form.seqname }}

      {{ transcript_search_form.refacc.errors }}
      <label for="id_refacc">Dmel. Accession</label>
      {{ transcript_search_form.refacc }}
    </div>

    <div class="field_wrapper">
      {{ transcript_search_form.refdes.errors }}
      <label for="id_refdes">Dmel Description</label>
      {{ transcript_search_form.refdes }}
    </div>

    <div class="field_wrapper">
      {{ transcript_search_form.seq.errors }}
      <label for="id_seq">Transcript Sequence</label>
      {{ transcript_search_form.seq}}
    </div>

    <div class="field_wrapper">
      {{ transcript_search_form.items_per_page.errors }}
      <label for="id_items_per_page">Items per page</label>
      {{ transcript_search_form.items_per_page }}
    </div>

    <p><input type="submit", value="Search" /><input type="reset", value="Clear" /></p>
  </form>
{% endif %}
